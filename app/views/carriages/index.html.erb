<p id="notice"><%= notice %></p>

<h1>Вагоны</h1>

<table>
  <thead>
    <tr>
      <th>Тип</th>
      <th>Кол-во верхних мест</th>
      <th>Кол-во нижних мест</th>
      <th>Номер поезда</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carriages.each do |carriage| %>
      <tr>
        <td><%= carriage.carriage_type %></td>
        <td><%= carriage.topseats %></td>
        <td><%= carriage.botseats %></td>
        <td><%= carriage.train.number %></td>
        <td><%= link_to 'Показать', carriage %></td>
        <td><%= link_to 'Изменить', edit_carriage_path(carriage) %></td>
        <td><%= link_to 'Удалить', carriage, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

